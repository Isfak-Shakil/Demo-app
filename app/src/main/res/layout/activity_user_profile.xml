<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="#face2f"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/profileImageId"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/shakil" />

            <TextView
                android:id="@+id/fullNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@id/profileImageId"
                android:includeFontPadding="false"
                android:text="Isfak Shakil"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullNameId"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@id/profileImageId"
                android:includeFontPadding="false"
                android:text="Isfak Shakil"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="-100dp"
            android:padding="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="#face2f"
                app:cardElevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_125sdp"
                android:layout_weight="1">
                <RelativeLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/payment_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:id="@+id/paymentLevelId"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_20sdp"
                        android:text="$123"
                        android:textColor="@color/black"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/paymentDescriptionId"
                        android:layout_below="@id/paymentLevelId"
                        android:textSize="@dimen/_14sdp"
                        android:text="Balance"
                        android:includeFontPadding="false"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="#face2f"
                app:cardElevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_125sdp"
                android:layout_weight="1">
                <RelativeLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bookmark_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:id="@+id/BookinLevelId"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_20sdp"
                        android:text="123"
                        android:textColor="@color/black"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/bookingDescriptionId"
                        android:layout_below="@id/BookinLevelId"
                        android:textSize="@dimen/_14sdp"
                        android:text="Booking"
                        android:includeFontPadding="false"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout

                android:hint="Full Name"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawableLeft="@drawable/person_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="Isfak Shakil"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:hint="Email"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawableLeft="@drawable/mail_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="isfakshakil@gmail.com"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:hint="Address"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawableLeft="@drawable/home_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="D C Road,Chawkbazar"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:hint="Phone"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="1234567"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:text="Update"
                android:background="#face2f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>



</ScrollView>