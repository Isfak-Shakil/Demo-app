<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_8sdp"
    android:layout_margin="@dimen/_10sdp"
    android:layout_width="@dimen/_160sdp"
    android:layout_height="@dimen/_300sdp">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/featured_imageId"
            android:scaleType="centerCrop"
            android:src="@drawable/shakil"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"/>

        <TextView
            android:id="@+id/featured_titleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Isfak Shakil"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />
        <RatingBar

            style="@style/Widget.AppCompat.RatingBar.Small"
            android:rating="3.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/featured_descriptionId"
            android:text="I am isfak Shakil.I am from chittagong.I completed my graduation from NSTU."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>