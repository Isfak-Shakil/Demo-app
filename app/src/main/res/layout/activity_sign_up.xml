<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <ImageView
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="fitXY"
        android:transitionName="logo_image"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/quiz"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"/>

    <TextView
        android:textSize="@dimen/_30sdp"
        android:transitionName="main_text"
        android:text="Demo App"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:transitionName="slogan_text"
        android:textSize="@dimen/_14sdp"
        android:layout_gravity="center_horizontal"
        android:text="Sign up To Continue Your New journey."
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userNameId"
            android:transitionName="username_text"
            android:hint="UserName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneId"
            android:hint="Phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addressId"
            android:hint="Address"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailId"
            android:hint="Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passWordId"
            android:transitionName="password_text"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/signUpBtnId"
                android:transitionName="signUp_text"
                android:textColor="@color/colorWhite"
                android:text="Done"
                android:textAllCaps="false"
                android:elevation="0dp"
                android:background="@color/purple_200"
                android:padding="@dimen/_5sdp"
                android:minWidth="@dimen/_150sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/loginBtnId"
                android:transitionName="login_text"
                android:layout_toRightOf="@id/signUpBtnId"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:background="@color/purple_200"
                android:elevation="0dp"
                android:layout_margin="@dimen/_10sdp"
                android:minWidth="@dimen/_150sdp"
                android:padding="@dimen/_5sdp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>




    </LinearLayout>

</LinearLayout>