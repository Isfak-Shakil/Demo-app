<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_30sdp"
    android:transitionName="transition_login"
    tools:context=".WelcomeScreenActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:backgroundTint="@color/black"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/retailer_icon"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_260sdp"/>
        <TextView
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/baloo"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_36sdp"
            android:text="Start Your Bussiness Here."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/loginNewId"
                android:onClick="callingLogingScreen"
                android:transitionName="transition_login"
                android:fontFamily="@font/baloo"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="#face2f"
                android:layout_margin="@dimen/_5sdp"
                android:text="Login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/signUpNewId"
                android:onClick="callingSignUpScreen"
                android:fontFamily="@font/baloo"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="#face2f"
                android:layout_margin="@dimen/_5sdp"
                android:text="Sign up"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/newSignUp"
            android:transitionName="transition_signup"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:text="How we work?"
            android:background="#00000000"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>